---
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { cn } from '@/lib/utils'

const currentUrl = Astro.url;
---

<Layout canonicalUrl={currentUrl}>
  <PageHead 
    slot="head" 
    title="404 - Page Not Found" 
    description="The page you're looking for couldn't be found. Return to the homepage to explore Cojocaru David's latest tech articles, projects, and programming insights."
  />
  
  <!-- Add 404 structured data -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "404 - Page Not Found",
    "description": "The requested page could not be found on this website.",
    "url": currentUrl.toString(),
    "mainEntity": {
      "@type": "Thing",
      "name": "404 Error",
      "description": "Page not found error"
    }
  })} />

  <section
    class="flex w-full flex-col items-center justify-center gap-y-4 text-center px-4 max-w-md mx-auto"
  >
    <div class="max-w-md">
      <h1 class="mb-4 text-3xl font-medium">404: Destination introuvable...</h1>
      <p class="prose mb-4">Vous cherchez quelque chose ? Moi aussi.</p>
      <img
        src="/img/pulpFiction-lostTravolta.gif"
        alt="Gif Pulp fiction John Travolta perplexe"
        class="w-full max-w-xl mx-auto rounded-lg"
      />
      <p class="pt-4 prose text-sm text-muted-foreground ">Revenons ensemble sur la bonne route.</p>
    </div>


    <div class="flex flex-col sm:flex-row gap-3">
      <Link
        href="/"
        class={cn(buttonVariants({ variant: 'default' }), 'flex gap-x-1.5 group')}
      >
        <span class="transition-transform group-hover:-translate-x-1">&larr;</span>
        Retour Ã  l'accueil
      </Link>
      <!-- <Link
        href="/blog"
        class={cn(buttonVariants({ variant: 'outline' }), 'flex gap-x-1.5')}
      >
        Browse Blog
      </Link> -->
    </div>
  </section>
</Layout>
